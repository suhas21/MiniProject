<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/pnrstatuslayout"
        tools:context=".PnrStatusDetails">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
         android:id="@+id/pnret1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
                  android:layout_margin="10dp"
        android:hint="@string/pnr"/>
    </android.support.design.widget.TextInputLayout>

      <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:id="@+id/pnrbut1"
               android:textStyle="bold"
               android:layout_marginBottom="10dp"
               android:text="@string/check"
               android:onClick="loadValues"/>
      <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
               android:id="@+id/pnrlview"/>

  </LinearLayout>